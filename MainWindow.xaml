      HorizontalAlignment="Left"  
      VerticalAlignment="Top"  
    Margin="10,10,0,0">
        </Calendar>

        <Label x:Name="label" Content="ResultLabel" HorizontalAlignment="Left" Margin="405,167,0,0" VerticalAlignment="Top"/>
        <TextBox Width="200" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="15,0,0,129" x:Name="SelectedDateTextBox">
        </TextBox>
    </Grid>
</Window>
